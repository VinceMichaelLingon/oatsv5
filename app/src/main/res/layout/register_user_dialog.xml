<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    app:layout_constraintVertical_bias="1">

    <!--    <ScrollView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent">-->

    <!--        <LinearLayout-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:orientation="vertical" />-->





    <!--    </ScrollView>-->

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintVertical_bias="1">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:text="First Name:" />

            <EditText
                android:id="@+id/editRegUFname"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="0dp"
                android:hint="Enter First name" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="129dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/textView3"
                android:text="Last Name" />

            <EditText
        android:id="@+id/editRegULname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="11dp"
        android:layout_toEndOf="@+id/editRegUFname"
        android:hint="Enter Last name" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editRegUFname"
                android:layout_marginTop="15dp"
                android:text="TUPT ID" />

            <EditText
                android:id="@+id/editRegUTUPID"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="0dp"
                android:hint="TUPT-**-****" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editRegUFname"
                android:layout_marginStart="148dp"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/textView7"
                android:text="Contact Number" />

            <EditText
        android:id="@+id/editRegUContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="11dp"
        android:layout_toEndOf="@+id/editRegUFname"
        android:hint="Contact Number" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editRegUTUPID"
                android:layout_marginTop="15dp"
                android:text="Department" />

            <Spinner
                android:id="@+id/RegUDept"
                android:layout_width="151dp"
                android:layout_height="36dp"

                android:layout_below="@+id/textView10"
                android:layout_marginTop="-1dp" />


            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editRegUContact"
                android:layout_marginStart="135dp"
                android:layout_marginTop="14dp"
                android:layout_toEndOf="@+id/textView7"
                android:text="Course" />

            <Spinner
        android:id="@+id/RegUCourse"
        android:layout_width="155dp"
        android:layout_height="36dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="11dp"
        android:layout_toEndOf="@+id/RegUDept" />


            <TextView
                android:id="@+id/textView12"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RegUDept"
                android:layout_alignParentStart="true"
                android:layout_marginStart="135dp"
                android:layout_marginTop="42dp"
                android:text="Email Address" />


            <TextView
                android:id="@+id/textView13"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editRegUemail"
                android:layout_alignParentStart="true"
                android:layout_marginStart="140dp"
                android:layout_marginTop="15dp"
                android:text="Password" />

            <EditText
                android:id="@+id/editRegUemail"
                android:layout_width="351dp"
                android:layout_height="59dp"
                android:layout_below="@+id/textView12"
                android:layout_alignParentStart="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="6dp"
                android:hint="Enter Email Address" />

            <EditText
                android:id="@+id/editRegUPassword"
                android:layout_width="352dp"
                android:layout_height="56dp"
                android:layout_below="@+id/textView13"
                android:layout_alignParentStart="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="-2dp"
                android:hint="Enter Password" />


    <Button
        android:id="@+id/btn_regUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editRegUPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/Maroon"
        android:text="Signup" />


            </RelativeLayout>
    </HorizontalScrollView>





</RelativeLayout>